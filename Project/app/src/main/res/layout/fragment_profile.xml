<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gap"
    tools:context="com.example.l8411.wut2eat29.Fragment.BottomNavi.ProfileFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <RelativeLayout
                android:id="@+id/view_user"
                android:background="@color/colorWhite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/UID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/head"
                    android:text="@string/Default"
                    android:textSize="18.0dip" />
                <TextView
                    android:layout_below="@+id/UID"
                    android:layout_toRightOf="@+id/head"
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Default"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:id="@+id/todayChoice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/Default"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/colorWhite"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:drawableLeft="@drawable/ic_stars_black_24dp"
                android:drawablePadding="5dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/top_3_choice"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">


                <TextView
                    android:id="@+id/topChoiceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/a" />

                <TextView
                    android:id="@+id/topChoiceB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topChoiceA"
                    android:layout_centerHorizontal="true"
                    android:text="@string/b" />

                <TextView
                    android:id="@+id/topChoiceC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topChoiceB"
                    android:layout_centerHorizontal="true"
                    android:text="@string/c" />

            </RelativeLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:drawableLeft="@drawable/ic_history_black_24dp"
                android:id="@+id/view_history"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/view_history"
                android:textSize="16sp"
                android:background="@color/colorWhite"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:drawableLeft="@drawable/ic_assessment_black_24dp"
                android:id="@+id/view_votes"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/view_votes"
                android:textSize="16sp"
                android:background="@color/colorWhite"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:drawableLeft="@drawable/icons8_approval_24"
                android:id="@+id/do_vote"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/do_vote"
                android:textSize="16sp"
                android:background="@color/colorWhite"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/gap" />

            <TextView
                android:drawableLeft="@drawable/ic_settings_black_24dp"
                android:id="@+id/setting"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/setting"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
