<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Iname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/s_ask_you_eat_together"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButtonYes"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/imageButtonNo"
        android:background="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icons8_checkmark_50" />

    <ImageButton
        android:id="@+id/imageButtonNo"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icons8_delete_50" />
    </RelativeLayout>
</android.support.v7.widget.CardView>